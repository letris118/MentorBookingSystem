<Window x:Class="MentorBookingSystem.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MentorBookingSystem"
        mc:Ignorable="d"
        Title="AdminWindow" Height="800" Width="1255" WindowStartupLocation="CenterScreen" Background="AntiqueWhite">

    <Grid>
        <!-- Sử dụng các nút thay vì TabControl -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="StudentMainWindow" Width="174" Height="50" FontSize="16"
                    Click="StudentMainWindowButton_Click"/>
            <Button Content="MentorMainWindow" Width="150" Height="50" FontSize="16"
                    Click="MentorMainWindowButton_Click"/>
            <Button Content="SlotWindow" Width="150" Height="50" FontSize="16"
                    Click="SlotWindowButton_Click"/>
            <Button Content="WalletWindow" Width="150" Height="50" FontSize="16"
                    Click="WalletWindowButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
